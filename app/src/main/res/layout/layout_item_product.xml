<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_product"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_5sdp"
        tools:src="@color/cardview_dark_background"/>

    <TextView
        android:id="@+id/tvProductSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgView"
        app:layout_constraintEnd_toEndOf="@id/imgView"
        android:textColor="@color/white"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/bg_sale"
        tools:text="%sale"/>

    <TextView
        android:id="@+id/tvProductTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgView"
        app:layout_constraintStart_toStartOf="@id/imgView"
        tools:text="Text Product Name"/>

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvProductTitle"
        app:layout_constraintStart_toStartOf="@id/tvProductTitle"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        tools:text="$ price"/>



</androidx.constraintlayout.widget.ConstraintLayout>